<main class="lista-vacantes">
    <h2>Lista de Vacantes</h2>
    {{!-- Vacantes --}}
    {{#if vacantes.length}}
    {{#each vacantes}}
    <div class="vacante">
        <div class="caja">
            <h3>{{empresa}}</h3>
            <p class="puesto">{{titulo}}</p>
        </div>
        <div class="caja">
            <p class="etiqueta">Ubicacion</p>
            <p class="nombre">{{ubicacion}}</p>
        </div>
        <div class="caja">
            <div class="etiqueta">Contrato</div>
            <div class="nombre contrato">{{contrato}}</div>
        </div>
        <div class="caja centrar-vertical">
            <a href="/vacantes/{{url}}" class="btn btn-verde">MÃ¡s Info</a>
        </div>
    </div>
    {{/each}}
    {{else}}
    <p>No hay vacantes</p>
    {{/if}}
</main>