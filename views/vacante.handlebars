<div class="contenido-superior vacante contenedor">
    <div class="caja">
        <div class="etiqueta">Empresa</div>
        <p class="nombre">{{vacante.empresa}}</p>
    </div>
    <div class="caja">
        <div class="etiqueta">Ubicación</div>
        <p class="nombre">{{vacante.ubicacion}}</p>
    </div>
    <div class="caja">
        <div class="etiqueta">Contrato</div>
        <p class="nombre contrato">{{vacante.contrato}}</p>
    </div>
    <div class="caja">
        <div class="etiqueta">Salario</div>
        <p class="nombre">$ {{vacante.salario}}</p>
    </div>

</div>
<div class="vacante-contenedor contenedor">
    <main class="contenido">
        <h2>Descripción del Puesto</h2>
        <div class="vacante-descripcion">
            {{!-- Como el objeto tiene html y lo queremos imprimir debemos usar 3 LLAVES --}}
            {{{vacante.descripcion}}}
        </div>
        <a href="/vacantes/editar/{{vacante.url}}" class="btn btn-azul editar-btn">Editar Vacante</a>
    </main>
    <aside class="sidebar">
        <h2>Conocimientos deseados</h2>
        <ul class="skills">
            {{#each vacante.skills}}
            {{!-- this se refiere a la posicion del arreglo que va iterando. --}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
    </aside>
</div>
<div class="contenedor datos-reclutador">
    <div class="enviar-datos">
        <h2>Contactar con el Reclutador</h2>
        <p>Llena el siguiente formulario, sube tu curriculum y pronto te contactaremos.</p>
        <form method="POST" enctype="multipart/form-data" action="/vacantes/{{vacante.url}}" class="default-form">
            <div class="campo">
                <label for="nombre">Nombre</label>
                <input type="text" name="nombre" placeholder="Tu nombre">
            </div>
            <div class="campo">
                <label for="email">Email</label>
                <input type="text" name="email" placeholder="Tu email">
            </div>
            <div class="campo">
                <label for="cv">CV (PDF) </label>
                <input type="file" name="cv">
            </div>
            <div class="campo">
                <input type="submit" class="btn btn-verde" value="Enviar">
            </div>
        </form>
    </div>
    <div class="info-reclutador">
        <h2>Información Reclutador</h2>
        {{#if vacante.autor.nombre}}
        <p>{{vacante.autor.nombre}}</p>
        {{/if}}
        {{#if vacante.autor.imagen}}
       <img src="/uploads/perfiles/{{vacante.autor.imagen}}" alt="" srcset="">
        {{/if}}
    </div>
</div>